{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./lib",
    "baseUrl": "./",
    "declaration": true
  },

  "include": ["./src/**/*"],
  "exclude": ["./node_modules/", "./lib/"]
}
